---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import Card from '@/components/ui/Card';
import { formatDate } from '@/utils/helpers';

const projects = await getCollection('projects', ({ data }: { data: any }) => {
  return data.draft !== true;
});

// Sort projects by date (newest first)
projects.sort((a: any, b: any) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());
---

<Layout 
  title="Projects - James Clabby"
  description="A showcase of my development projects and creative work"
>
  <Header />
  <main class="container mx-auto px-4 py-16">
    <div class="max-w-6xl mx-auto">
      <header class="mb-12 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-gray-100">
          Projects
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          A showcase of my development projects and creative work
        </p>
      </header>

      {projects.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-gray-600 dark:text-gray-400 text-lg">
            No projects yet. Check back soon!
          </p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {projects.map((project: any) => (
            <Card variant="outlined" className="hover:shadow-lg transition-shadow h-full flex flex-col">
              <article class="flex flex-col h-full">
                <header class="mb-4">
                  <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-2">
                    <a href={`/projects/${project.slug}`} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                      {project.data.title}
                    </a>
                  </h2>
                  <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-3">
                    <time datetime={project.data.publishDate.toISOString()}>
                      {formatDate(new Date(project.data.publishDate))}
                    </time>
                  </div>
                  {project.data.tags && project.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-3">
                      {project.data.tags.map((tag: string) => (
                        <span class="px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded-md text-xs">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </header>
                <p class="text-gray-600 dark:text-gray-300 mb-4 flex-grow">
                  {project.data.description}
                </p>
                <a 
                  href={`/projects/${project.slug}`}
                  class="text-blue-600 dark:text-blue-400 hover:underline font-medium mt-auto"
                >
                  View Project â†’
                </a>
              </article>
            </Card>
          ))}
        </div>
      )}
    </div>
  </main>
  <Footer />
</Layout> 